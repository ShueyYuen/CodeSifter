{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2024"],
    "module": "Preserve",
    "moduleResolution": "bundler",
    "declaration": true,
    "moduleDetection": "force",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "baseUrl": "src",
    "skipLibCheck": true,
    "isolatedModules": true,
    "isolatedDeclarations": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "playground"
  ]
}
